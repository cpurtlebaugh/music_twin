<!-- ## form to store a user's session via login -->

<%= render '/shared/header' %>

<div class="form-group">
<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <%= form_tag login_path do %>
    <ul>
      <li><h1>Login</h1></li>
      <li><%= label_tag :email %></li>
      <li><%= text_field_tag :email %></li>

      <li><%= label_tag :password  %></li>
      <li ><%= password_field_tag :password %></li>

      <li><%= submit_tag 'Login' %></li>
    <% end %>
    </ul>
  </div>
</div>
</div>

<%= render '/shared/footer' %>
