<!-- ## shared header to keep app DRY -->

<div class="container">
<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <nav>
      <ul class="nav navbar-nav nav-bar-right">

<!-- ## embedded ruby conditionals to change nav bar display based upon a user being logged in or out -->

          <% if logged_in? %>
            <li><%= link_to "Home", user_path(current_user.id) %></li>
          <% else %>
          <li><%= link_to "Home", home_path %></li>
          <% end %>

            <li><%= link_to "About", about_path %></li>

          <% if logged_in? %>
            <li><%= link_to "Log out", logout_path(current_user.id), method: :delete %></li>
          <% else %>
            <li><%= link_to "Login", login_path %></li>
            <li><%= link_to "Signup", signup_path%></li>
          <% end %>

          <% if logged_in? %>
            <li><%= link_to "Settings", edit_user_path(current_user.id) %></li>
          <% end %>
      </ul>
    </nav>
</header>

<header id="header" class="jumbotron">
  <h1>Music Twin</h1>
  <p>A place to monitor your twin's trending status.</p>
</header>

