<%= render '/shared/header' %>

<% if logged_in? %>

<h1>Search Your Twin </h1>
  <!-- ## form tag to invoke the twin query search  -->
  <%= form_tag twins_path, method: :get do %>
    <%= text_field_tag :query, params[:query], :class => "Search Box" %>
    <%= submit_tag "Search for twins", name: nil, :class => 'btn btn-warning' %>
  <% end %>

  <br>
  <!-- ## loop to display each twin result generated by the query  -->
  <ul class="list-inline col-sm-12">

    <% @twins.each do |twin| %>
      <li class="col-sm-3">
        <%= twin.name %>
        <br>
        <button class="btn btn-primary">
          <div class="submit-button">
            <%= button_to "Save As Twin", add_twin_path(twin)%>
          </div>
          Save Twin
        </button>
      <br>
      <br>
      </li>
    <% end %>
  </ul>

  <% else %>

<% end %>





