<!-- ## displays user's twin on their home page -->
<%= render '/shared/header' %>

<a href="/twins">
  <button class="btn btn-warning btn-lg">
    Search Twins
  </button>
</a>
<br>

<h1> YOUR TWINS </h1>
<% @user.twins.each do |twin| %>
  <ul class="list-inline">
    <li>
      <!-- twin name -->
      <h3><%= twin.name %></h3>

      <!-- markets list -->
        <ul class="row list-inline col-sm-12">
          <% twin.rankings.each do |ranking| %>
              <li>
                <%= ranking[:country] %>,
                <%= ranking[:name] %>
                #<%= ranking[:rank] %>
              </li>
          <% end %>
        </ul>
      </li>
      <br>

      <!-- remove twin -->
      <button class="btn btn-primary">
        <div class="submit-button">
          <%= button_to "Remove", remove_twin_path(twin) %>
        </div>
        Remove
      </button>
      <br>
      <br>
  </ul>
<% end %>
<br>
<br>
<%= render '/shared/footer' %>

